<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.3.xsd">

<!-- ===================================================================== -->
	<!-- ++++++++ activer la détection auto des beans (composants) +++++++++++ -->
	<!-- ===================================================================== -->
	<context:component-scan base-package="com.intiformation.siteecommerce"/>

	
	<!-- ============================================================ -->
	<!-- ======= Déclaration du bean de la DataSource =============== -->
	<!-- ============================================================ -->
	<bean id="dataSourceBean"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">

		<property name="url" value="db:mysql://localhost:3306/db_site_ecommerce" />
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="username" value="root" />
		<property name="password" value="root" />
	</bean>
	
	<!-- ============================================================ -->
	<!-- ======= Déclaration du bean de la SessionFactory =========== -->
	<!-- ============================================================ -->
	<bean id="sessionFactoryBean"
		class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">

		<!-- injection du bean du DataSource dans le bean de la sessionFactory -->
		<property name="dataSource" ref="dataSourceBean" />

		<!-- proriétés d'hibernates -->
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.hbm2ddl.auto">create</prop>
			</props>
		</property>

		<!-- déclaration des classes annotées avec les annotations JPA -->
		<property name="annotatedClasses">
			<list>
				<value>com.intiformation.siteecommerce.modele.*</value>
			</list>
		</property>
	</bean>
	
	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<!-- ++++++++++++++  Déclaration du bean de la couche DAO   +++++++++++++++++++++++++++++++++++++ -->
	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<bean id="boutiqueDaoBean" class="com.intiformation.siteecommerce.dao.BoutiqueDAOImpl">
	
		<!-- injection du bean de la sessionFactory dans la prop 'sessionFactory' du bean dao -->
		<property name="sessionFactory" ref="sessionFactoryBean"/>
	</bean>
	
	<!-- ============================================================================ -->
	<!-- ++++++++ Déclaration du gestionnaire des transactions de spring ++++++++++++ -->
	<!-- ============================================================================ -->
	<bean id="transactionManagerBean" 
	      class="org.springframework.orm.hibernate5.HibernateTransactionManager">
	      
	      <!-- association du gestionnaire à la sessionFactory (injection de la SF) -->
	      <property name="sessionFactory" ref="sessionFactoryBean"/>
	      
	</bean>
	
	<!-- ============================================================================================== -->
	<!-- ++++++++ Activer la détection des anntations pour les transactions (@Transactionnel)++++++++++++ -->
	<!-- =============================================================================================== -->
	<tx:annotation-driven transaction-manager="transactionManagerBean"/>
	
	
</beans>
